            <script type="text/javascript">
		      function testsk() {
		          window.location.href = '../Home/login';
		      }

		      function RegisterInsertData() {
		          var name = document.getElementById("account").value;
		          var pass1 = document.getElementById("password").value;
		          var pass2 = document.getElementById("password1").value;
		          var na = document.getElementById("name").value;
		          var sex = document.getElementById("sex").value;
		          var age = document.getElementById("age").value;
		          var idcard = document.getElementById("idcard").value;
		          var address = document.getElementById("address").value;
		          var tel = document.getElementById("tel").value;



		          if (name == "") {
		              new Dialog().alert('请输入用户名！', {
		                  title: '系统提醒'
		              });
		              return false;
		          }
		          if (pass1 == "") {
		              new Dialog().alert('请输入密码！', {
		                  title: '系统提醒'
		              });
		              return false;
		          }
		          if (pass2 == "") {
		              new Dialog().alert('请再次输入密码！', {
		                  title: '系统提醒'
		              });
		              return false;
		          }
		          if (pass1 != pass2) {
		              new Dialog().alert('两次输入的密码不一致！', {
		                  title: '系统提醒'
		              });
		              return false;
		          }
		          if (na == "") {
		              new Dialog().alert('请输入姓名！', {
		                  title: '系统提醒'
		              });
		              return false;
		          }

		          if (idcard == "") {
		              new Dialog().alert('身份证号！', {
		                  title: '系统提醒'
		              });
		              return false;
		          }
		          if (address == "") {
		              new Dialog().alert('请输入地址！', {
		                  title: '系统提醒'
		              });
		              return false;
		          }
		          if (tel == "") {
		              new Dialog().alert('请输入电话！', {
		                  title: '系统提醒'
		              });
		              return false;
		          }
		          $.ajax({
		              url: "/Home/RegisterCheckName",//必填
		              type: "post",
		              data: { "usename": name},
		              dataType: "json",
		              success: function (data) {//回调
		                  $("#ulList").html("");
		                  if (data == "1") {

		                      document.getElementById("msg_info").innerHTML = '用户名已存在';
		                      $("#namei").hide()

		                      //此处需要修改

		                      return false;
		                  }
		                  else {

		                      $.ajax({
		                          url: "/Home/RegisterInsertData",//必填
		                          type: "post",
		                          data: { "usename": name, "pass": pass1, "name": na, "sex": sex, "age": age, "idcard": idcard, "address": address, "tel": tel },
		                          dataType: "json",
		                          success: function (data) {//回调
		                              $("#ulList").html("");
		                              if (data == "1") {
		                                  alert("注册成功");
		                                  //页面跳转

		                                  window.location.href = '../Home/login';
		                              }
		                              else {
		                                  alert("注册失败，请再次确认输入信息");
		                              }
		                          }
		                      });

		                  }
		              }
		          });






		      }

            </script>

