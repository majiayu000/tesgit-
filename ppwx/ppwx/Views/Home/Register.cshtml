        <div class="mui-content-padded">
            <label class="ui-button ui-button-primary" for="someId" role="button" onclick="RegisterInsertData()">立即注册</label></br>
            <span class="red">星号为必填内容</span>

            <script src="../js/jquery-3.3.1.min.js"></script>
